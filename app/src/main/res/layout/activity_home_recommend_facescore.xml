<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <com.xzh.douyuapp.ui.refreshview.XRefreshView
        android:id="@+id/rtefresh_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xrefreshview:autoLoadMore="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/facescore_content_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.xzh.douyuapp.ui.refreshview.XRefreshView>
</LinearLayout>